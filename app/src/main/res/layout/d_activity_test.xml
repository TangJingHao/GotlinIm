<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.activity.TestActivity">

    <include
        android:id="@+id/test_bar"
        layout="@layout/d_include_my_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <Button
            android:id="@+id/btn_new_friend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="查找新好友" />

        <Button
            android:id="@+id/btn_new_group_chat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="查找新群聊" />

        <Button
            android:id="@+id/btn_history_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="查找历史记录" />

        <Button
            android:id="@+id/btn_friend_application"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="好友申请" />

        <Button
            android:id="@+id/btn_my_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="我的群聊" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/test_rv_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="[我]"
            android:textColor="@color/PrimaryBlue_03" />

        <TextView
            android:id="@+id/tv_me"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="@string/preview_text"
            android:textColor="@color/PrimaryBlue_03" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="[复读机]"
            android:textColor="@color/text_ultrastrong" />

        <TextView
            android:id="@+id/tv_other"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="@string/preview_text"
            android:textColor="@color/text_ultrastrong" />

        <Button
            android:id="@+id/btn_send"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="发送测试信息" />

        <Button
            android:id="@+id/btn_connext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="开启连接" />

        <Button
            android:id="@+id/btn_close"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="关闭连接" />

        <Button
            android:id="@+id/btn_pop_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="确认弹窗" />

        <Button
            android:id="@+id/btn_pop_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="输入框弹窗" />

        <Button
            android:id="@+id/btn_pop_select"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="单选弹窗" />

        <Button
            android:id="@+id/btn_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:background="@drawable/t_login_button_bg"
            android:text="主界面"
            android:textColor="@color/fill_white" />

    </LinearLayout>


</LinearLayout>