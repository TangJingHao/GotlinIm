<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/im_toolbar_height"
    android:background="?attr/bg_weak"
    android:paddingHorizontal="@dimen/im_common_horizontal">

    <ImageButton
        android:id="@+id/img_chevron_left"
        android:layout_width="@dimen/im_icon_medium"
        android:layout_height="@dimen/im_icon_medium"
        android:layout_gravity="center_vertical"
        android:background="@drawable/ic_28_chevron_left" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/im_icon_medium"
        android:layout_gravity="center"
        android:textColor="?attr/text_ultrastrong"
        android:textSize="@dimen/im_text_medium"
        android:text="@string/preview_text"/>

    <ImageButton
        android:id="@+id/img_more"
        android:layout_width="@dimen/im_icon_medium"
        android:layout_height="@dimen/im_icon_medium"
        android:layout_gravity="center_vertical|right"
        android:background="@drawable/ic_28_more_horizontal"
        android:visibility="gone"/>

</FrameLayout>