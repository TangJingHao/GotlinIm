<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/im_login_button_height"
    android:clickable="true"
    android:focusable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_item_main_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/im_spacing_large"
            android:text="正文"
            android:textColor="?attr/text_ultrastrong"
            android:textSize="@dimen/im_text_medium" />

        <ImageView
            android:id="@+id/iv_item_entry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/im_spacing_large"
            app:srcCompat="@drawable/ic_24_chevron_right" />
        <TextView
            android:id="@+id/tv_item_auxiliary_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="辅助文本"
            android:textSize="@dimen/im_text_small"
            android:textColor="?attr/text_strong"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/im_spacing_medium"
            android:layout_toLeftOf="@+id/iv_item_entry"/>
    </RelativeLayout>

</FrameLayout>