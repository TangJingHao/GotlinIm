<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/bg_default"
    tools:context=".view.activity.SearchActivity"
    android:orientation="vertical">

    <include
        android:id="@+id/my_toolbar"
        layout="@layout/d_my_toolbar"/>

    <net.lucode.hackware.magicindicator.MagicIndicator
        android:id="@+id/newFriends_indicator"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:paddingHorizontal="@dimen/im_common_horizontal"
        android:background="?attr/bg_weak"/>

    <FrameLayout
        android:id="@+id/newFriends_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>