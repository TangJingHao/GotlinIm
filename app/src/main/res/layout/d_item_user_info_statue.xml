<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/im_user_item_detail_height"
    android:background="@color/bg_weak"
    android:orientation="horizontal"
    android:paddingHorizontal="@dimen/im_common_horizontal">

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/im_spacing_medium"
        android:layout_toStartOf="@id/tv_statue"
        android:layout_toEndOf="@+id/img_user_pic"
        android:ellipsize="end"
        android:lines="1"
        android:maxEms="12"
        android:text="用户名"
        android:textColor="?attr/text_ultrastrong"
        android:textSize="@dimen/im_text_large" />

    <TextView
        android:id="@+id/tv_user_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_user_name"
        android:layout_marginTop="@dimen/im_spacing_small"
        android:layout_toStartOf="@id/tv_statue"
        android:layout_toEndOf="@+id/img_user_pic"
        android:ellipsize="end"
        android:lines="1"
        android:text="用户信息/邮箱"
        android:textColor="?attr/text_medium"
        android:textSize="@dimen/im_text_small" />

    <ImageView
        android:id="@+id/img_user_pic"
        android:layout_width="@dimen/user_pic"
        android:layout_height="@dimen/user_pic"
        android:layout_gravity="left"
        android:layout_marginStart="@dimen/im_spacing_medium"
        android:layout_marginTop="@dimen/im_spacing_medium"
        android:layout_marginEnd="@dimen/im_spacing_medium"
        android:layout_marginBottom="@dimen/im_spacing_medium"
        android:src="@drawable/d_img_useravatar1" />

    <TextView
        android:id="@+id/tv_statue"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_marginLeft="8dp"
        android:background="?attr/fill_medium"
        android:gravity="center"
        android:lines="1"
        android:paddingHorizontal="@dimen/im_spacing_large"
        android:text="状态"
        android:textColor="?attr/text_medium"
        android:textSize="@dimen/im_text_small" />


</RelativeLayout>