    <!--底部导航栏按钮主题-->
    <style name="navigation_button_bg" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="android:textSize">@dimen/im_text_tiny</item>
        <item name="colorPrimary">?attr/text_strong</item>
        <item name="android:textColorSecondary">?attr/text_ultraweak</item>
    </style>

    <style name="popupAnimation">
        <item name="android:windowEnterAnimation">@anim/d_anim_pop_enter</item>
        <item name="android:windowExitAnimation">@anim/d_anim_pop_exit</item>
    </style>

    <!--tjh的弹窗style-->
    <style name="t_popup_window_style" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/t_anim_pop_enter</item>
        <item name="android:windowExitAnimation">@anim/t_anim_pop_exit</item>
    </style>

    <declare-styleable name="SideBar">
        <attr name="scaleSize" format="integer"/>
        <attr name="scaleItemCount" format="integer"/>
        <attr name="scaleWidth" format="dimension"/>
    </declare-styleable>



</resources>