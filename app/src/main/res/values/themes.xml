        <item name="critical_press"         >@color/critical_press          </item>
        <item name="critical_disabled"      >@color/critical_disabled       </item>

        <item name="text_ultrastrong"       >@color/text_ultrastrong        </item>
        <item name="text_strong"            >@color/text_strong             </item>
        <item name="text_medium"            >@color/text_medium             </item>
        <item name="text_weak"              >@color/text_weak               </item>
